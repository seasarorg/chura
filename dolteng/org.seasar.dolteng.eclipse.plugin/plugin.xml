<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.seasar.dolteng.eclipse.preferences.DoltengProjectPreferencePage"
            id="propertyPages"
            name="Dolteng"
            objectClass="org.eclipse.jdt.core.IJavaProject"/>
   </extension>
   <extension
         id="nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="org.seasar.dolteng.eclipse.nature.DoltengNature"/>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.seasar.dolteng.eclipse.plugin"
            name="Dolteng"/>
      <view
            category="org.seasar.dolteng.eclipse.plugin"
            class="org.seasar.dolteng.eclipse.part.DatabaseView"
            id="org.seasar.dolteng.eclipse.databaseView"
            name="DatabaseView"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.seasar.dolteng.eclipse.plugin.DatabaseView"
               relationship="stack"
               relative="org.eclipse.jdt.ui.PackageExplorer"/>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="org.seasar.dolteng.eclipse.plugin.JPAAssociation"
            targetID="#CompilationUnitEditorContext">
         <action
               class="org.seasar.dolteng.eclipse.action.JPAAssociateAction"
               id="org.seasar.dolteng.eclipse.plugin.JPAAssociateAction"
               label="Add JPAAssociation"
               menubarPath="additions"/>
      </viewerContribution>
      <objectContribution
            adaptable="true"
            id="org.seasar.dolteng.eclipse.plugin.objectContribution"
            nameFilter="*.htm*"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.seasar.dolteng.eclipse.plugin.menu"
               label="Chura"
               path="file">
            <separator name="churagroup"/>
         </menu>
         <action
               class="org.seasar.dolteng.eclipse.action.NewPageWizardAction"
               id="org.seasar.dolteng.eclipse.plugin.newPageAction"
               label="Create New Page Class"
               menubarPath="org.seasar.dolteng.eclipse.plugin.menu/churagroup"/>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.seasar.dolteng.eclipse.plugin"
            name="Chura"/>
      <wizard
            canFinishEarly="false"
            category="org.seasar.dolteng.eclipse.plugin"
            class="org.seasar.dolteng.eclipse.wizard.ChuraProjectWizard"
            hasPages="true"
            id="ChuraProjectWizard"
            name="Chura Project"
            project="true"/>
   </extension>


</plugin>
